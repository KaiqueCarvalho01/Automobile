
<%- include('partials/header') %> 
<body class="bg-dark">
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px;">
            <h1 class="text-center mb-4">Faça uma Proposta</h1>

            <%# Este bloco verifica se a variável successMessage foi enviada pelo controller e a exibe %>
            <% if (typeof successMessage !== 'undefined') { %>
                <div class="message success">
                    <p><%= successMessage %></p>
                </div>
            <% } %>

            <%# Este bloco faz o mesmo para a variável errorMessage %>
            <% if (typeof errorMessage !== 'undefined') { %>
                <div class="message error">
                    <p><%= errorMessage %></p>
                </div>
            <% } %>


            <form action="/proposta" method="POST" id="proposta-form">
                <div class="mb-3">
                    <label for="name" class="form-label">Nome</label>
                    <input type="text" id="name" class="form-control" placeholder="Digite seu nome" name="nome" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" class="form-control" placeholder="Digite seu email" name="email" required>
                </div>
                <div class="mb-3">
                    <label for="telefone" class="form-label">Telefone</label>
                    <input type="text" id="telefone" class="form-control" placeholder="119XXXXYYYY" name="telefone" required maxlength="11">
                </div>
                <div class="mb-3">
                    <label for="cpf" class="form-label">CPF</label>
                    <input type="text" class="form-control" id="cpf" placeholder="123.456.789-10" name="cpf" required maxlength="14">
                  </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Mensagem</label>
                    <textarea name="mensagem" class="form-control" id="message" rows="3" required></textarea>
                </div>
                <div class="d-grid">
                    <button class="btn btn-primary" type="submit">Enviar</button>
                </div>
            </form>
        </div>
    </div>
    <style>
    .message {
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 5px;
        text-align: center;
        font-weight: bold;
    }
    .success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }
    .error {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
