<%- include('partials/header') %>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/forms.css">
    
   
</head>

<section class="contact-section">
    <div class="container">
        <div class="contact-form-container">
            <h2>Fale Conosco</h2>
            <p class="lead">Dúvidas, críticas ou sugestões? Preencha o formulário abaixo e nossa equipe entrará em contato.</p>
            
            <% if (locals.mensagemSucesso) { %>
                <div class="alert alert-success"><%= mensagemSucesso %></div>
            <% } %>
            <% if (locals.mensagemErro) { %>
                <div class="alert alert-danger"><%= mensagemErro %></div>
            <% } %>
    
            <form action="/contato" method="POST" class="mt-4">
                <div class="mb-3 input-group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" id="nome" name="nome" placeholder="Seu nome completo" required>
                </div>
                <div class="mb-3 input-group">
                    <i class="fas fa-envelope"></i>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Seu melhor e-mail" required>
                </div>
                <div class="mb-3 input-group">
                    <i class="fas fa-phone"></i>
                    <!-- ATUALIZADO: placeholder e o atributo 'required' -->
                    <input type="tel" class="form-control" id="telefone" name="telefone" placeholder="Telefone" required>
                </div>
                <div class="mb-4 input-group">
                    <i class="fas fa-comment-dots" style="top: 25px;"></i>
                    <textarea class="form-control" id="mensagem" name="mensagem" rows="5" placeholder="Digite sua mensagem aqui..." required></textarea>
                </div>
                <button type="submit" class="btn btn-primary w-100">Enviar Mensagem</button>
                <div class="text-center mt-3">
                    <a href="/" class="text-white-50 text-decoration-none" style="font-size: 0.9em;">
                        <i class="fas fa-arrow-left me-1"></i> Voltar ao início
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>

<%- include('partials/footer') %>
