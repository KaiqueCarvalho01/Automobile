<%- include('partials/header') %>
<body class="bg-dark text-light">
    <div class="container mt-5 mb-5" style="max-width: 500px;">
        <h2>Login</h2>
        <% if (typeof mensagemErro !== 'undefined' && mensagemErro) { %>
            <div class="alert alert-danger mt-3"><%= mensagemErro %></div>
        <% } %>
        <% if (typeof mensagemSucesso !== 'undefined' && mensagemSucesso) { %> <%# Para mensagens como "Logout realizado" %>
            <div class="alert alert-success mt-3"><%= mensagemSucesso %></div>
        <% } %>
        <form action="/api/auth/login" method="POST" class="mt-3">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= locals.email || '' %>" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Senha</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Entrar</button>
        </form>
        <p class="mt-3 text-center">NÃ£o tem uma conta? <a href="/register" class="text-warning">Cadastre-se</a></p>
    </div>
    <%- include('partials/footer') %>
</body>
</html>